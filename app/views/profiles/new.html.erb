<h1>New Profile</h1>
<%= form_for :profile do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :female %>
  <%= f.check_box :female %>
  <%= f.label :male %>
  <%= f.check_box :male %>

  <%= f.label :breed %>
  <%= f.text_field :breed %>

  <%= f.label :city %>
  <%= f.text_field :city %>

 <%=select_tag 'State', options_for_select(us_states),:name=>"state",:id=>"state"%>


  <%= f.label :age %>
  <%= f.number_field :age %>

  <%=f.label :pro_pic %>
  <%= f.file_field :image, class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_field :description, class: "description_para" %>

  <p>
    <%= f.submit %>
    <%= link_to 'Back', :back, class: "back" %>
  </p>
<% end %>
