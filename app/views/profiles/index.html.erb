<h1>My Profiles</h1>
<p><a href="/profiles/new">New Profile</a></p>


<div class='container'>
      <div class='row'>
    <% @profiles.each do |profile| %>

        <div class="col-md-3">
          <div class='caption'>
            <h2><%= profile.name %></h2>
          <div class='thumbnail'>
            <img><%= image_tag profile.pro_pic %></img>
          </div>

          </div>
        </div>

    <% end %>
  </div>
</div>
