<%= form_for @profile do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@profile.errors.count, "error") %> prohibited
        this profile from being saved:
      </h2>
      <ul>
        <% @profile.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="panel panel-default">
    <div class="panel-heading">

    </div>
    <div class="panel-body">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :gender %>
          <%= f.select :gender, [["Male", "Male"], ["Female", "Female"]], autocomplete: "off", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :breed %>
          <%= f.text_field :breed, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :city %>
          <%= f.text_field :city, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
           <%= select_tag 'State', options_for_select(us_states),:name=>"profile[state]",:id=>"state" %>
        </div>
        <div class="form-group">
          <%= f.label :age %>
          <%= f.text_field :age, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%=f.label :profile_Picture %>
          <%= f.text_field :pro_pic, class: "form-control" %>
         </div>
         <div class="form-group">
           <%= f.label :description %>
           <%= f.text_area :description, class: "form-control" %>
         </div>
        <%= f.submit %>
<%end%>
