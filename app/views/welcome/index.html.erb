<!-- mms: indentation -->
  <% if current_user %>
  <!-- mms: redirection is a controller responsibility -->
    <% redirect_to profiles_path %>



  <% else %>
  <div class='container'>
        <div class='row'>
      <!-- mms: does each dog ahave a profile?  Or each kennel? -->
      <% @profiles.each do |profile| %>

          <div class="col-md-3">
            <div class='caption'>
              <h2><%= profile.name %></h2>
            <div class='thumbnail'>
              <img><%= image_tag profile.pro_pic %></img>
            </div>

            </div>
          </div>

      <% end %>
    </div>
  </div>
<% end %>
